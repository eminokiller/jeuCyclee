{% import "campaign/macro.html.twig" as forms %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{{ form_start(form) }}
{{ form_row(form.libelle) }}
{#{{ form_row(form.equipes) }}#}
<div data-prototype="{{ forms.render_widget_item(form.actionMarketings.vars.prototype, '__name__')|e('html_attr') }}" class="widget-container">
    {% for i,action in form.actionMarketings %}
        {{ forms.render_widget_item(action, i) }}
    {% endfor %}
<button onclick="return addItem(this);" type="button" class="btn btn-success"><i class="fa fa-plus-circle"></i></button>
</div>
{{ form_rest(form) }}
<button class="btn" type="submit">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
