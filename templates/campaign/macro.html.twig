{% macro render_widget_item(item, index) %}
    <div class="widget-item row">
        <div class="col-md-3">
            {{ form_row(item.libelle, {attr:{class:"form-control"}}) }}
        </div>
        <div class="col-md-3">
            {{ form_row(item.typeAction, {attr:{class:"form-control"}}) }}
        </div>
        <div class="col-md-3">
            {{ form_row(item.questions, {attr:{class:"form-control"}}) }}
        </div>
        <div class="col-md-3">
            <label>&nbsp;</label>
            <button onclick="removeItem(this);" type="button" class="mt-3 btn btn-danger"><i class="fa fa-trash"></i></button>
        </div>
    </div>
{% endmacro %}