{% extends 'base.html.twig' %}

{% block title %}Equipe index{% endblock %}

{% block body %}
<div class="m-portlet m-portlet--mobile">
    <div class="m-portlet__head">
        <div class="m-portlet__head-caption">
            <div class="m-portlet__head-title">
                <h3 class="m-portlet__head-text">
                    Mes Campagnes
                </h3>
            </div>
        </div>
        <div class="m-portlet__head-tools">
            <ul class="m-portlet__nav">
                <li class="m-portlet__nav-item">
                    <a href="{{ path('campaign_new') }}" class="btn btn-accent m-btn m-btn--custom m-btn--pill m-btn--icon m-btn--air">
												<span>
													<i class="la la-plus"></i>
													<span>Ajouter une campagne</span>
												</span>
                    </a>
                </li>
                <li class="m-portlet__nav-item"></li>

            </ul>
        </div>
    </div>
    <div class="m-portlet__body">
        <table class="table table-striped- table-bordered table-hover table-checkable"  id="m_table_1">
        <thead>
        <tr>
            <th>Id</th>
            <th>Libelle</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for campagne in campaigns %}
            <tr>
                <td>{{ campagne.id }}</td>
                <td>{{  campagne.libelle}}</td>
                <td>


                        <span class="dropdown">
                            <a href="#" class="btn m-btn m-btn--hover-brand m-btn--icon m-btn--icon-only m-btn--pill" data-toggle="dropdown" aria-expanded="false">
                              <i class="la la-ellipsis-h"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" x-placement="bottom-end" style="position: absolute; transform: translate3d(-196px, 27px, 0px); top: 0px; left: 0px; will-change: transform;">
                                <a class="dropdown-item" href="{{ path('campaign_update', {'id': campagne.id}) }}"><i class="la la-edit"></i> Mettre à jour</a>
                                <a class="dropdown-item" href="{{ path('campaign_configure', {'id': campagne.id}) }}"><i class="la la-leaf"></i> Configurer le jeu</a>
                                <a class="dropdown-item" href="{{ path('campaign_configure_team', {'id': campagne.id}) }}"><i class="la la-print"></i> Configurer les équipes</a>
                            </div>
                        </span>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    </div>
</div>
{% endblock %}
